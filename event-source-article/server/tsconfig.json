{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "./src",
    "rootDirs": ["src"],
    "declaration": true,
    "target": "es2020",
    "lib": ["es2020"],
    "sourceMap": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "CommonJS",
    "moduleResolution": "node"
  }
}
